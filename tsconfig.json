{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
    },
    "strict": true,
    "baseUrl": ".",
    "outDir": "build",
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "tests/**/*"],
}